	},
	"keywords": [
		"obsidian",
		"encryption",
		"security",
		"privacy",
		"vault",
		"hades",
		"securevault",
		"selection-encryption"
	],
	"author": "Hades Team",
	"license": "MIT",
	"dependencies": {
		"@types/jest": "^30.0.0",
		"crypto-js": "^4.2.0",
		"jest": "^30.2.0",
		"ts-jest": "^29.4.5"
	},
	"devDependencies": {
		"@types/crypto-js": "^4.2.1",
		"@types/node": "^16.11.6",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"esbuild": "0.17.3",
		"obsidian": "latest",
		"tslib": "2.4.0",
		"typescript": "4.7.4"
	}
